{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recess-order"
    ],
    "customSyntax": "postcss-lit",
    "rules": {
        "selector-class-pattern": [
            "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
            {
                "message": "Expected class selector to follow BEM convention"
            }
        ]
    }
}